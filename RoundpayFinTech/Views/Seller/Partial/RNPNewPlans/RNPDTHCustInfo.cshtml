@using Fintech.AppCode.StaticModel
@model RoundpayFinTech.AppCode.Model.ROffer.RNPDTHCustInfo

<div class="row">
    <div class="col-md-12">
        <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h3>DTH Consumer Info</h3>
        <hr />
    </div>
    @if (Model.StatusCode == ErrorCodes.One)
    {
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="scroll-content">
                <div class="container">
                    <table>
                        <thead>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Plan Name</td>
                                <td>:</td>
                                <th>@Model.PlanName</th>
                            </tr>
                            <tr>
                                <td>Customer Name</td>
                                <td>:</td>
                                <th>@Model.CustomerName</th>
                            </tr>
                            <tr>
                                <td>Balance</td>
                                <td>:</td>
                                <th>@Model.Balance</th>
                            </tr>
                            @*<tr>
                                <td>Last Recharge Amount</td>
                                <td>:</td>
                                <th>@Model..Lastrechargeamount</th>
                            </tr>*@
                            @*<tr>
                                <td>Next Recharge Date</td>
                                <td>:</td>
                                <th>@Model.NextRechargeDate</th>
                            </tr>*@
                            @*<tr>
                                <td>Last Recharge Date</td>
                                <td>:</td>
                                <th>@Model.Lastrechargedate</th>
                            </tr>*@
                            @*<tr>
                                <td>Monthly Recharge</td>
                                <td>:</td>
                                <th>@Model.MonthlyRecharge</th>
                            </tr>*@
                            @*<tr>
                                <td>Status</td>
                                <td>:</td>
                                <th>@Model.Status</th>
                            </tr>*@
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    }
    else if (Model.StatusCode == ErrorCodes.Minus1)
    {
        <h2 class="text-danger">Oops! Customer Not Found</h2>
    }
    else
    {
        <h2 class="text-danger">Oops! Customer information not availble</h2>
    }
</div>
